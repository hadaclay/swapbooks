extends layout

block content
  .container.has-text-centered
    br
    form.form(action='/updateinfo', method='POST')
      h2.title Update Profile
      label.label(for='name') Name
      p.control
        input.input(type='text' name='name' value=user.name)
      label.label(for='city') City
      p.control
        input.input(type='text' name='city' value=user.city)
      label.label(for='state') State
      p.control
        input.input(type='text' name='state' value=user.state)
      p.control
        input.button(type='submit' value='Save Changes')
    br
