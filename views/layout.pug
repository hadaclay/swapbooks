doctype html
html
  head
    title= `${title} | ${h.siteName}`
    link(rel='stylesheet', href='/dist/style.css')
    link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
    meta(name='viewport' content='width=device-width, initial-scale=1')
  body
    block header
      .container
        nav.nav
          .nav-left
            h3.nav-item #{h.siteName}
            a.nav-item(href='/') Home
          .nav-menu.nav-right
              if user
                a.nav-item(href='/allbooks') All Books
                a.nav-item(href='/mybooks') My Books
                a.nav-item(href='/settings')
                  span.icon
                    i.fa.fa-cog
                a.nav-item(href='/logout')
                  span.icon
                    i.fa.fa-power-off
              else
                a.nav-item(href='/signup') Sign Up
                a.nav-item(href='/login') Login
        
    block messages
      if locals.flashes
        - const categories = Object.keys(locals.flashes)
        each category in categories
          each message in flashes[categories]
            .notification(class=`${category}`)
              p.flash-text!= message
              button.delete(onClick="this.parentElement.remove()")
    
    .content
      block content
        p Hello World!
      
    footer.footer
      .container
        .content.has-text-centered
          p #{h.siteName} by Clayton Hadaway
        
    block scripts
      script(src='/dist/App.bundle.js')
